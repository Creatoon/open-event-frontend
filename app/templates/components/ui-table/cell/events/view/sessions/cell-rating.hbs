<div class="d-flex">
  <div class="flex-grow-1">
    {{#if (includes this.props.options.ratedSessions this.record)}}
      {{#each this.extraRecords.feedbacks as |feedback|}}
        {{#if (eq feedback.user.email this.authManager.currentUser.email)}}
          <UiRating
            @initialRating={{feedback.rating}}
            @rating={{feedback.rating}}
            @maxRating={{5}}
            @onRate={{pipe-action (action (mut feedback.rating)) (action this.props.actions.updateRating feedback.rating feedback)}}
            @clearable={{true}} />
        {{/if}}
      {{/each}}
    {{else}}
      <UiRating
        @initialRating={{0}}
        @rating={{this.rating}}
        @maxRating={{5}}
        @onRate={{pipe-action (action (mut this.rating)) (action this.props.actions.addRating this.rating this.record)}}
        @clearable={{true}} />
    {{/if}}
  </div>
  <div class="text center aligned flex-grow-1">
     {{this.extraRecords.averageRating}} / {{this.extraRecords.feedbacks.length}} 
  </div>
</div>
